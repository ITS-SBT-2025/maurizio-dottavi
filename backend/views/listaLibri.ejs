<!DOCTYPE html>
<html>
    <head>
        <title>Book List</title>
        <link rel="stylesheet" href="/css/styles.css">  

        <script src="/js/scripts.js"></script>
    </head>
    <body>
        <header>
            <h1>My Book List</h1>
        </header>

        <main>
            <h2><%= title %> Found</h2>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(function(book) { %>
                        <tr>
                            <td><%= book.title %></td>
                            <td><% if (book.author == "Tolkien") { %>
                                <strong><%= book.author %></strong>
                                <% } else { %>
                                <%= book.author %></td>
                                <% } %>
                        </tr>
                    <% }); %>
                </tbody>

        </main>

